@using CretaceousClient.Models;

<h1>All Animals:</h1>

<ol>
    @foreach (Animal animal in Model)
    {
    <ul>
        <li>ID: @animal.AnimalId</li>
        <li>Name: @animal.Name</li>
        <li>Species: @animal.Species</li>
        <li>Age: @animal.Age</li>
        <li>Gender: @animal.Gender</li>
    </ul>
    <a href="/Animals/Details/@(animal.AnimalId)"><p>View Details</p></a>
    <a href="/Animals/Edit/@(animal.AnimalId)"><p>Edit</p></a>
    <a href="/Animals/Delete/@(animal.AnimalId)"><p>Delete</p></a>
    
    <br>
    
    }
    
    <a href="/Animals/new/"><p>New</p></a>
</ol>